extends layout

block contenido
    div(class="max-w-[50ch] mx-auto mt-1")
        p#tittle(class="text-center text-3xl w-full font1 overflow-hidden whitespace-nowrap overflow-ellipsis") #{code.CODE_TITLE}
        p#description(class="w-11/12 mx-auto mt-2 text-center text-lg") #{code.CODE_DESC}
        div#container-codigo(class="flex mt-3 flex-col w-full rounded-lg ")
            div#head-code(class="flex justify-between p-4")
                if code.CODES_LANGUAGEs.length > 0
                    div.text-base.flex.gap-2
                      - const languageTitles = code.CODES_LANGUAGEs.map(language => language.LANGUAGE.LANGUAGE_TITLE)
                        p.text-base= languageTitles.join(' - ')

                button(class="text-base rounded-md translate hover hoveroutline") Copiar
            pre#code(class=" text-base font2 px-3 lg:px-8 py-6 rounded-lg w-full overflow-auto")
                code
                | #{code.CODE_CODE}